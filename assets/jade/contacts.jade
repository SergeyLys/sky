extends templates/pageTemplate

block tmpVars
    - var bodyClass = '';

block title
    title Site title

block script
    script(type='text/javascript').
        var vars = {
            ajaxUrl: "",
            page: 'contacts_page'
        };

block content
    main.site-main
      section.section-offset
        .row.align-center
          .small-12.columns
              .section-title.text-center
                  h2 What can we offer to you?
          .small-12.large-8.columns
              .form-wrapper.contacts-form-wrapper.
                  <form class="onlineshop_form" id="footerContactForm" name="form[footerContactForm]" action="javascript:footerContactForm(null);" enctype="multipart/form-data">
                      <div class='row'>
                          <div class="small-12 large-6 columns">
                              <div class='mat-div'>
                                  <label class="mat-label">Your name</label>
                                  <input type="text" name="form_request[footerContactForm][firstname][value]" required="required" class="mat-input">
                              </div>
                          </div>

                          <div class="small-12 large-6 columns">
                              <div class='mat-div'>
                                  <label class="mat-label">Email Address</label>
                                  <input type="email" name="form_request[footerContactForm][email][value]" required="required" class="mat-input">
                              </div>
                          </div>

                          <div class="small-12 large-6 columns">
                              <div class='mat-div'>
                                  <label class="mat-label">Phone</label>
                                  <input type="text" name="form_request[footerContactForm][phone][value]" class="mat-input">
                              </div>
                          </div>

                          <div class="small-12 large-6 columns">
                              <div class='mat-div'>
                                  <label class="mat-label">Company</label>
                                  <input type="text" name="form_request[footerContactForm][company][value]" class="mat-input">
                              </div>
                          </div>

                          <div class="small-12 columns">
                              <div class='mat-div'>
                                  <label class="mat-label">Message</label>
                                  <input type="text" name="form_request[footerContactForm][message][value]" required="required" class="mat-input">
                                  <button type="submit" class="bb-t"></button>
                              </div>
                          </div>
                      </div>
                      <input type="hidden" name="form_request[footerContactForm][firstname][title]" value="Your name">
                      <input type="hidden" name="form_request[footerContactForm][firstname][name]" value="firstname">
                      <input type="hidden" name="form_request[footerContactForm][email][title]" value="Email Address">
                      <input type="hidden" name="form_request[footerContactForm][email][name]" value="email">
                      <input type="hidden" name="form_request[footerContactForm][phone][title]" value="Phone">
                      <input type="hidden" name="form_request[footerContactForm][phone][name]" value="phone">
                      <input type="hidden" name="form_request[footerContactForm][company][title]" value="Company">
                      <input type="hidden" name="form_request[footerContactForm][company][name]" value="company">
                      <input type="hidden" name="form_request[footerContactForm][message][title]" value="Message">
                      <input type="hidden" name="form_request[footerContactForm][message][name]" value="message">
                      <input type="hidden" name="form_request[form_id]" value="footerContactForm">
                      <input type="text" name="form_request[footerContactForm][antibot]" id="antibot" style="display: none;">
                      <img id="imgLoad" src="../images/loading.gif" style="display: none;">
                  </form>
